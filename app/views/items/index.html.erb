<%= paginate @items %>
<div class="row">
<% @items.each do |item| %>
<div class="col-sm-4 pb-4">

<div class="card mb-3" style="max-width: 540px;">
  <div class="row g-0">
    <div class="col-md-4">
   <%if item.image.present? %>
     <%= image_tag item.image , width: "100%" , height: "width",alt:"Logo" %>
   <%end%>
    </div>
    <div class="col-md-8">
      <div class="card-body">
        <h5 class="card-title"><%= link_to item.name, item %> </h5>
        <p class="card-text"><%= item.description %></p>
        <p class="card-text"><small class="text-muted"><%= number_to_currency item.price %></small></p>
       <p class="card-text"><small class="text-muted">Quantity:  <%= @qty %></small></p>


    <%= form_with url: cart_index_path, method: :post do   %>
    <%= hidden_field_tag(:id, item.id) %>
    <%= hidden_field_tag(:quantity, @qty) %>
      <%= button_tag 'Add to Cart' %>
    <% end %>


      </div>
    </div>
  </div>
</div>


</div>

<% end %>
</div>

<%= paginate @items %>