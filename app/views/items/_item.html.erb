  <aside>
    <% if item.image.present? %>
      <p><%= image_tag item.image.variant(resize_to_limit: [285, 285]).processed  %></p>
    <% end %>
    <h3><%= link_to item.name, item %></h3>
    <p>Price: <%= number_to_currency item.price %></p>
    <p><%= item.description %></p>

    <%if cart.include?(item) %>
    <%= button_to cart_path(item), method: :delete do %>
    Remove from Cart
    <% end %>

    <% else %>
    <%= form_with url: cart_index_path, method: :post do   %>
    <%= hidden_field_tag(:id, item.id) %>
      <%= button_tag 'Add to Cart' %>
    <% end %>
    <%end%>
  </aside>