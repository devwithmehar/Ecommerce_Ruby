<figure class="text-center m-5 h1">
  <blockquote class="blockquote">
    <p>Shopping Cart 🛒</p>
  </blockquote>
</figure>

<% @items.each do |item| %>
<ol class="list-group ">
  <li class="list-group-item d-flex justify-content-between align-items-start">
    <div class="ms-2 me-auto">
      <div class="fw-bold"><%= link_to item.name, item %></div>
      <%= item.description %> <br>

      <%# Quantity %>
    </div>
    <span class="badge bg-primary rounded-pill m-2"><%= number_to_currency item.price %></span>
    <span class="badge bg-danger rounded-pill m-2">
      <%= button_to cart_path(item), method: :delete  do %>
        ❌
    <% end %>
    </span>
  </li>

</ol>
<% end %>


<%if @items.count !=0 %>

<ol class="list-group mb-5 ">
  <li class="list-group-item d-flex justify-content-between align-items-start">
    <div class="ms-2 me-auto">
      <div class="fw-bold">Total</div>

    </div>
    <span class="badge bg-primary rounded-pill me-5">


  <% @items.each do |item| %>
  <% @total = @total + item.price %>
  <% end %>
  <%= number_to_currency @total  %>
    </span>
  </li>
</ol>
<% end %>

<%if @items.count == 0 %>
  <h3 class="text-center m-5 ">
  No Item is Selected !
</h3>
<%end%>

<br>



